{
	"name": "qq",
	"displayName": "QQ",
	"description": "light qq",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "qq-explorer",
					"title": "QQ Explorer",
					"icon": "qq.ico"
				}
			]
		},
		"views": {
			"qq-explorer": [
				{
					"id": "chat-friends",
					"name": "好友列表"
				},
				{
					"id": "chat-groups",
					"name": "群列表"
				},
				{
					"id": "chat-strangers",
					"name": "陌生人列表"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.1",
		"@types/node": "^12.20.6",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"eslint": "^7.22.0",
		"glob": "^7.1.6",
		"mocha": "^8.3.2",
		"typescript": "^4.2.3",
		"vscode-test": "^1.5.1"
	},
	"dependencies": {
		"@types/ws": "^7.4.0",
		"oicq": "^1.14.1",
		"ws": "^7.4.4"
	}
}
